<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DishesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".TodayMenuActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/company_name"
                android:textColor="@color/black"
                android:textColorHint="#000000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="158dp"
                    android:layout_height="101dp"
                    android:contentDescription="Sopa de casa"
                    app:srcCompat="@drawable/sopa" />

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="355dp"
                    android:layout_height="wrap_content"
                    android:text="Sopa de casa" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="158dp"
                    android:layout_height="101dp"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/palta" />

                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ensalada de palta" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="158dp"
                    android:layout_height="101dp"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/ceviche" />

                <CheckBox
                    android:id="@+id/checkBox6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ceviche" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="158dp"
                    android:layout_height="101dp"
                    app:srcCompat="@drawable/tallarinesverdes" />

                <CheckBox
                    android:id="@+id/checkBox7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tallarines verdes" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="158dp"
                    android:layout_height="113dp"
                    app:srcCompat="@drawable/img" />

                <CheckBox
                    android:id="@+id/checkBox8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aji de gallina" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="158dp"
                    android:layout_height="101dp"
                    app:srcCompat="@drawable/img_1" />

                <CheckBox
                    android:id="@+id/checkBox9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seco a la norteña de pollo" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:text="Confirmar selección" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>